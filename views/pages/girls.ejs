<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Private chat</title>
    <link rel="stylesheet" href="./public/css/home.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>

<body>


    <div class="container">
        <h1 class="text-center">Welcome to Play bOi Home</h1>

        <div class="media" id="titbody" style="background-color: whitesmoke; height:100px; margin-top:50px">
            <!-- <img src="../../public/img/priya.jpg" alt="lucy" id="girlpic" style="float: left;margin:15px 0 0 10px" -->
            <!-- class="rounded-circle float-left img-thumbnail" width="75" height="50"> -->
            <div class="media-body" id="npe" style="float:right; margin:10px 10px 0 0">
                <h3 id="girlname" style="margin-left: 5px;">Priya</h3>
                <span style="color: green; margin-left:10px">Online</span>
            </div>

        </div>

        <div id="chatContainer" class="container border overflow-auto" style="height: 300px;">

        </div>
        <div class="input-group">
            <input id="textbox" type="text" class="form-control" placeholder="Enter your message"/>
            <div class="input-form-append">
                <button id="sendbtn" type="button" class="btn btn-primary">Send</button>
            </div>
        </div>


        <div class="exitbtn">
            <button class="button-56" role="button"><a href="./home" class="btnspinner">Exit the server</a></button>
        </div>


        <div class="load-wrapper">
            <div class="lds-facebook">
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>

    </div>

    <script>

        $(window).on("load", function () {
            $(".load-wrapper").fadeOut("slow");
        });

    </script>

    <script src="../../public/js/chatbot.js"></script>
    <script>
        var geting = localStorage.getItem("girlid");
        var ids = JSON.parse(geting);
        const name = ids.name;
        const imgsrc = ids.img;

        var nameid = document.getElementById("girlname");
        nameid.innerText = name;

        var imgpt = document.createElement('img');
        imgpt.src = imgsrc;
        imgpt.style.float = "left";
        imgpt.style.margin = "15px 0 0 10px";
        imgpt.className = "rounded-circle float-left img-thumbnail"
        imgpt.width = "75";
        imgpt.height = "20";
        document.getElementById('titbody').appendChild(imgpt);

    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>

</body>

</html>